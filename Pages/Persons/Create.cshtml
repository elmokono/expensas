@page
@model ExpensasAbbinatura.Pages.Persons.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Persona</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Person.FullName" class="control-label"></label>
                <input asp-for="Person.FullName" class="form-control" />
                <span asp-validation-for="Person.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Email" class="control-label"></label>
                <input asp-for="Person.Email" class="form-control" />
                <span asp-validation-for="Person.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Password" class="control-label"></label>
                <input asp-for="Person.Password" class="form-control" />
                <span asp-validation-for="Person.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.RoleCode" class="control-label"></label>
                <select asp-for="Person.RoleCode" class="form-control">
                    <option value="GUEST">Inquilino / Propietario</option>
                    <option value="ADMIN">Administrador del Sitio</option>
                </select>
                <span asp-validation-for="Person.RoleCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Department" class="control-label"></label>
                <input asp-for="Person.Department" class="form-control" />
                <span asp-validation-for="Person.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Building" class="control-label"></label>
                <select asp-for="Person.Building.BuildingId" class="form-control" asp-items="@Model.Buildings">
                </select>
                <span asp-validation-for="Person.Building.BuildingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Persona" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
